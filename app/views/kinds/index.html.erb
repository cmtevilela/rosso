<h1>Kinds page</h1>

<table class="zebra" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>
        Nome
      </th>
      <th>
        Tipo
      </th>
      <th>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @kinds.each do |kind| %>
      <tr>
        <td>
          <%= link_to kind.name, kind %>
        </td>

        <td>
          <% link_to Category.find(kind.category_id).name, kind %>
          <%= link_to kind.category.name, kind %>
        </td>
        <td>
          <%= link_to "editar", edit_kind_path(kind) %> | 
          <%= link_to 'deletar', kind, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<p><%= link_to "Cadastrar Tipo de Entrada / Despesa", new_kind_path%></p>

